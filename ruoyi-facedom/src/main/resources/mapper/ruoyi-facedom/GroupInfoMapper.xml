<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.gruop.mapper.GroupInfoMapper">
    
    <resultMap type="GroupInfo" id="GroupInfoResult">
        <result property="id"    column="id"    />
        <result property="groupId"    column="group_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="createBy"    column="create_by"    />
        <result property="updateBy"    column="update_by"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectGroupInfoVo">
        select id, group_id, create_time, update_time, create_by, update_by, remark from group_info
    </sql>

    <select id="selectGroupInfoList" parameterType="GroupInfo" resultMap="GroupInfoResult">
        <include refid="selectGroupInfoVo"/>
        <where>  
            <if test="groupId != null  and groupId != ''"> and group_id = #{groupId}</if>
        </where>
    </select>
    
    <select id="selectGroupInfoById" parameterType="Long" resultMap="GroupInfoResult">
        <include refid="selectGroupInfoVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertGroupInfo" parameterType="GroupInfo" useGeneratedKeys="true" keyProperty="id">
        insert into group_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupId != null">group_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="createBy != null">create_by,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupId != null">#{groupId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateGroupInfo" parameterType="GroupInfo">
        update group_info
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupId != null">group_id = #{groupId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGroupInfoById" parameterType="Long">
        delete from group_info where id = #{id}
    </delete>

    <delete id="deleteGroupInfoByIds" parameterType="String">
        delete from group_info where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>